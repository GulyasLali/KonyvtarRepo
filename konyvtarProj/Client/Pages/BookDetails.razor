@page "/bookdetails"
@page "/bookdetails/{LibNumber}"

@if(string.IsNullOrEmpty(LibNumber))
{
    <PageTitle>Új könyv hozzáadása</PageTitle>
    <h1>Add hozzá saját könyved!</h1>
}
else
{
    <PageTitle>Könyvadaok</PageTitle>
    <h1>A választott könyv adatai</h1>
}

<div class="row">
    <EditForm Model="@book" OnValidSubmit="@HandleValidRequest" OnInvalidSubmit="@HandleInvalid">
        <div class="form-group">
            <label class="col-md-3">Title</label>
            <InputText class="col-md-8 form-control" @bind-Value="@book.Name"></InputText>
        </div>
        <div class="form-group">
            <label class="col-md-3">Title</label>
            <InputText class="col-md-8 form-control" @bind-Value="@book.Name"></InputText>
        </div>
        <div class="form-group">
            <label class="col-md-3">Author</label>
            <InputText class="col-md-8 form-control" @bind-Value="@book.Author"></InputText>
        </div>
        <div class="form-group">
            <label class="col-md-3">Publisher</label>
            <InputText class="col-md-8 form-control" @bind-Value="@book.Publisher"></InputText>
        </div> 
        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-warning">Mentés</button>
            <a @onclick="@GoToBookPage" class="btn btn-primary">Vissza</a>
        </div>

    </EditForm>
</div>
